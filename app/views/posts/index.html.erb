<h1>My Blog</h1>

<div class="row">
  <div class="col-xs-12 col-md-8">
    <% @posts.each do |post| %>
 <p>ID：<%= post.id %></p>
 <p><a href= "/posts/<%= post.id %>/">タイトル：<%= post.title %></a></p>
 <p>本文：<%= post.body %></p>
 <% end %>
 <p><a href= "/posts/new">新規投稿：</a></p>
</div>
  <div class="col-xs-6 col-md-4">
     <h1>ブログ作者</h1>

    <p>担当：<%= @author.name %></p>
    <p>一言：<%= @author.description %></p>
  </div>
</div>





